{
  "compilerOptions": {
    "target": "es2016",        
    "rootDir": "./src",
    "outDir": "./dist",                          
    "module": "commonjs",                                
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "noImplicitAny": true,                      
    "skipLibCheck": true                        
  },
   "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
